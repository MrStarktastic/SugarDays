<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Base.AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <style name="MaterialCalendarView.TextAppearance" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

</resources>
