<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/normal_margin"
    android:padding="@dimen/normal_margin">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo"
            android:contentDescription="@string/content_desc_photo"
            app:layout_aspectRatio="178%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/normal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/log_type_text"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Breakfast"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/log_time_text"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/log_type_text"
            android:drawablePadding="@dimen/tiny_margin"
            android:drawableStart="@drawable/ic_time_white_18dp"
            android:gravity="center_vertical"
            android:text="9:41 AM"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/log_location_text"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/log_time_text"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/tiny_margin"
            android:drawablePadding="@dimen/tiny_margin"
            android:drawableStart="@drawable/ic_location_white_18dp"
            android:gravity="center_vertical"
            android:text="Big Ben, London"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/log_blood_glucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/log_location_text"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_rect_green"
            android:padding="@dimen/tiny_margin"
            android:text="100 mg/dL"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>